<div style='width: 80%; margin-left: 30px; margin-top: 30px;'>
  <%= form_for [@gossip, @comment] do |f| %>
  <%= label_tag 'Author:' %>
  <%= f.text_field :anonymous_commentor, placeholder: 'Your username...', class: "form-control", id: "formGroupExampleInput2" %>
  <br><br>
  <%= label_tag 'Comment:' %>
  <%= f.text_area :content, placeholder: 'Your comment...', class: "form-control", id: "formGroupExampleInput2" %>
  <br><br>
  <%= f.submit "Add a comment", class: "btn btn-success"  %>
<% end %>
