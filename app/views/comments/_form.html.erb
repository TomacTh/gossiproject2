

<%= form_for([@gossip,@gossip.comments.build]) do |f| %>
<%= label_tag 'anonymous_commentor:' %>
<%= f.text_field :anonymous_commentor, placeholder: 'username', class: "form-control", id: "formGroupExampleInput2" %>
